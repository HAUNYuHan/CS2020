if (Num1 < Nume2)
{
    TmpNum=Num1;
    Num1=Num2;
    Num2=TmpNum; /*找出兩數較大值*/
}
while (Num2 ！= 0)
{
    TmpNum=Num1 % Num1 % Num2 ; /* 求兩數的餘數值*/
    Num1=Num2;
    Num2=TmpNum; /*輾轉相除法*/
}
print("最大公因數(g.c.d)=%d\n",Num1);

float Pow( float x, int y )
{
    float p = 1;
    int i;
    for( i = 1; i <= y; i++)
    p *= x;
    
    return p;
}

int main(void)
{
    fioat x;
    int y;
    print( "請輸入次方運算(ex.2^3) :")};
    scanf("%f^%d",&x, &y );
    print( "次方運算結果:%.4f\n", Pow(x,y) );
    /*輸出與呼叫 Pow() 函數*/

int factorial (int i)
{
    int sum;
        if(i == 0)/*遞迴中止的條件*/
            return(1);
         else
            sum = i * factorial(i-1); /* sum=n*(n-1)！所以直接呼叫本身*/
         return sum;
}

int fib(int n)
{
    if(n==0) return 0;
    if(n==1)
        return 1;
    else
        retuen fib(n-1)+fib(n-2);/*遞迴引用本身2次*/
}

/*CH01-01.c*/
#include <stdio.h>
#include <stdlib.h>

int fib(int);       /* fib() 函數的原型宣告 */

int main(void)
{
    int i,n;
    print("請輸入要計算到第幾個費是數列:");
    scanf("%d",&n);
    
    for(i=0;i<=n;i++)       /*計算前1n個費式數列*/
        print("fib(%d)=%d\n",i,fib(i));
        
        
     return 0;
 }
 
 int fib(int n)     /*定義函數fib()*/
 {
 
    if (n==0)
        return 0; /*如果n=0 則傳回 */
    else if(n==1｜｜n==2) /*如果n=1或n=2，則傳回1 */
        return 1;
    else                /*否則傳回 fib(n=1)+fib(n-2)*/
        return(fib(n-1)+fib(n-2));
  }
